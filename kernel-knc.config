# -*- mode:toml; -*-
[config]
    # search paths relative to position of the config file
    moduledirs = ["kernel"]
    destdir = "kernel-knc"

    # pseudo modules and so on that are assumed as available
    provides = [
      "tag/cpu/amd64",
      "tag/cpu/delay",
      "tag/cpu/clevict",
      "tag/cpu/kncapic", "tag/cpu/xapic",
      "tag/mode/kernel",
      "tag/platform/knc",
      "tag/compiler/gcc",
      "tag/boot/sfi",
      "tag/cap/spinning",
      "tag/cpu/kncioapic",
      ]

    requires = [
      "boot64.elf",
      "Makefile",
      ]

    modules = [
      "gitignore",
      "thread-mutex-delegating",
      "plugin-dump-multiboot",
      "plugin-cpudriver-knc",
      "app-init-example",
      "kernel-idle-knc",
      "lapic", "lapic-kncapic",
    ]

[config.vars]
    mythos_root = ".."
    cxx_path = "../3rdparty/cxx-knc/usr"
